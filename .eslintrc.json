{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "no-console": 0,
    "semi": 2,
    "comma-dangle":"off",
    "no-unused-vars":"off",
    "no-cond-assign": ["error", "always"]
    },
"overrides": [
  {
    "files": ["*-test.js","*.spec.js"],
    "rules": {
      "no-unused-expressions": "off"
    }
  }
]

}
